---

<div class="decorations" aria-hidden="true">
  {decorations.map((decoration, index) => (
    <div 
      class="decoration" 
      data-emoji={decoration}
      style={`--delay: ${index * 0.5}s; --position: ${index * (100 / decorations.length)}%`}
    >
      {decoration}
    </div>
  ))}
</div>

<style>
  .decorations {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 999;
  }

  .decoration {
    position: absolute;
    font-size: 2rem;
    animation: float 3s ease-in-out infinite;
    animation-delay: var(--delay);
    left: var(--position);
    top: 10%;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(20px) rotate(10deg); }
  }
</style>