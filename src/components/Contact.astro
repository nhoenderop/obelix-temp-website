<section id="contact" class="contact">
  <h2 class="translate" data-translate="contact.us">Neem Contact Op</h2>
  <div class="contact-info">
    <div class="info-item">
      <h3 class="translate" data-translate="address">Adres</h3>
      <p>Uppsalalaan, 3584 CT Utrecht</p>
    </div>
    <div class="info-item">
      <h3 class="translate" data-translate="email">E-mail</h3>
      <p><a href="mailto:info@skvu.nl">info@skvu.nl</a></p>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 3rem 1rem;
    background-color: #f7fafc;
  }

  h2 {
    text-align: center;
    color: #2d3748;
    margin-bottom: 2rem;
  }

  .contact-info {
    max-width: 600px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
  }

  .info-item {
    text-align: center;
  }

  h3 {
    color: #4a5568;
    margin-bottom: 0.5rem;
  }

  a {
    color: #2b6cb0;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (min-width: 640px) {
    .contact-info {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>