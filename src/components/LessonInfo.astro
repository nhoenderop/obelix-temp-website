---
import { translations } from '../i18n/translations';
---

<div class="lesson-info">
  <h3 class="translate" data-translate="lessons.title">Lessen</h3>
  <div class="lessons">
    <div class="lesson">
      <span class="day translate" data-translate="tuesday">Dinsdag</span>
      <div class="lesson-details">
        <span class="type translate" data-translate="lessons.tuesday">Powerliften + Strongman</span>
        <span class="time translate" data-translate="lessons.time">20:30 - 22:15</span>
      </div>
    </div>
    <div class="lesson">
      <span class="day translate" data-translate="wednesday">Woensdag</span>
      <div class="lesson-details">
        <span class="type translate" data-translate="lessons.wednesday">Calisthenics + Weightlifting</span>
        <span class="time translate" data-translate="lessons.time">20:30 - 22:15</span>
      </div>
    </div>
    <div class="lesson">
      <span class="day translate" data-translate="thursday">Donderdag</span>
      <div class="lesson-details">
        <span class="type translate" data-translate="lessons.thursday">Hypertrophy</span>
        <span class="time translate" data-translate="lessons.time">20:30 - 22:15</span>
      </div>
    </div>
  </div>
</div>

<style>
  .lesson-info {
    margin-top: 2rem;
    padding: 1rem;
    background-color: #edf2f7;
    border-radius: 8px;
  }

  h3 {
    color: #2d3748;
    font-size: 1.25rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .lessons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .lesson {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background-color: white;
    border-radius: 6px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .day {
    font-weight: 600;
    color: #4a5568;
    min-width: 100px;
  }

  .lesson-details {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
  }

  .type {
    color: #2d3748;
    font-weight: 500;
  }

  .time {
    color: #718096;
    font-size: 0.875rem;
  }

  @media (max-width: 640px) {
    .lesson {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .lesson-details {
      align-items: flex-start;
    }
  }
</style>