---
interface Props {
  corner: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right';
}

const { corner } = Astro.props;

const getRotation = (corner: string) => {
  switch (corner) {
    case 'top-left': return '135deg';
    case 'top-right': return '-135deg';
    case 'bottom-left': return '45deg';
    case 'bottom-right': return '-45deg';
    default: return '0deg';
  }
};
---

<div class={`corner-cat ${corner}`}>
  <div class="cat" style={`--rotation: ${getRotation(corner)}`}><img src="/mauro.png" alt="ðŸ±"></div>
</div>

<style>
  .corner-cat {
    position: fixed;
    z-index: 1000;
    opacity: 0;
    font-size: 2rem;
    pointer-events: none;
    cursor: pointer;
  }

  .cat {
    transform: scale(0) rotate(var(--rotation));
    transition: all var(--animation-duration, 300ms) cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hat {
    position: absolute;
    top: -1rem;
    left: 0.5rem;
    font-size: 1.5rem;
    transform: scale(0);
    transition: all var(--animation-duration, 300ms) cubic-bezier(0.4, 0, 0.2, 1);
  }

  .top-left {
    top: 1rem;
    left: 1rem;
  }

  .top-right {
    top: 4rem;
    right: 1rem;
  }

  .bottom-left {
    bottom: 1rem;
    left: 1rem;
  }

  .bottom-right {
    bottom: 1rem;
    right: 1rem;
  }

  .show {
    opacity: 1;
    pointer-events: auto;
  }

  .show .cat {
    transform: scale(1) rotate(var(--rotation));
  }

  .show .hat {
    transform: scale(1);
  }

  .wiggle .cat {
    animation: wiggle 0.6s ease-in-out;
  }

  .wiggle .hat {
    animation: wiggleHat 0.6s ease-in-out;
  }

  .fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    cursor: pointer;
  }

  .fullscreen .cat {
    font-size: 10rem;
    animation: spin 3s linear infinite;
  }

  .fullscreen .hat {
    font-size: 8rem;
    top: -6rem;
    left: 2rem;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes wiggle {
    0%, 100% { transform: scale(1) rotate(var(--rotation)); }
    25% { transform: scale(1.1) rotate(calc(var(--rotation) + 10deg)) translateX(5px); }
    50% { transform: scale(1.1) rotate(calc(var(--rotation) - 10deg)) translateX(-5px); }
    75% { transform: scale(1.1) rotate(calc(var(--rotation) + 10deg)) translateX(5px); }
  }

  @keyframes wiggleHat {
    0%, 100% { transform: scale(1); }
    25% { transform: scale(1.1) translateY(-2px); }
    50% { transform: scale(1.1) translateY(2px); }
    75% { transform: scale(1.1) translateY(-2px); }
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .exit .cat {
    transform: scale(0) rotate(calc(var(--rotation) - 15deg));
  }

  .exit .hat {
    transform: scale(0);
  }
</style>